pipeline{
    agent any 
    stages{
        stage ('compile stage'){
            
            step{
                withMaven (maven : 'maven'){
                    sh 'mvn clean compile'
                }
            }
        }
        stage ('Test stage'){
            
            step{
                withMaven (maven : 'maven'){
                    sh 'mvn test'
                }
            }
        }
        stage ('Deploy stage'){
            
            step{
                withMaven (maven : 'maven'){
                    sh 'mvn deploy'
                }
            }
        }    
    }
}
